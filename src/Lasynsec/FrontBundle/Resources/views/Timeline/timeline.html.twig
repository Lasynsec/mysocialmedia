{% extends 'LasynsecFrontBundle::layout.html.twig' %}

{% block content %}
<div class="container">
	<h2>Timeline</h2>

	<table class="statuses_list">
		<thead>
			<tr>
				<th>Content</th>
				<th>Deleted</th>
				<th>Created</th>
			</tr>
		</thead>
		<tbody>
			{% for status in statuses %}
				<tr>
					<td>{{ status.user.username }}</td>
					<td>{{ status.content }}</td>
					<td>{{ status.deleted ? "supprimÃ©" : "visible" }}</td>
					<td>{% if status.createdAt %}
							{{ status.createdAt | date('Y-m-d H:i:s')}}
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock content %}